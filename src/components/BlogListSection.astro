---
const { frontmatter, url } = Astro.props;

const { pubDate, title, description } = frontmatter;
---

<div class="py-4 border-t border-sky-800 flex flex-wrap dark:border-sky-100">
  <div class="w-fit h-fit px-4 py-[6px] rounded-lg bg-sky-100 dark:bg-sky-600">
    <p class="font-semibold text-md text-sky-700 text-center dark:text-sky-100">
      {pubDate.slice(0, 10)}
    </p>
  </div>
  <div class="w-full mt-2">
    <a class="font-bold text-2xl text-sky-800 dark:text-sky-50" href={url}
      >{title}</a
    >
    <p class="font-medium text-md text-sky-700 pt-1 dark:text-sky-100">
      {description}
    </p>
  </div>
</div>
