---
import "../assets/style/global.css";
import MainLayout from "../layouts/MainLayout.astro";
import Tag from "../components/Tag.astro"

const pageTitle = "Home";
---

<MainLayout {pageTitle}>
  <section id="hero">
    <div
      class="w-full h-fit mb-24 mt-44 flex flex-col justify-center items-center space-y-8 text-center"
    >
      <h1 class="font-extrabold text-7xl lg:text-9xl text-sky-700 dark:text-sky-50">
        Perdi Blog
      </h1>
      <p class="font-semibold text-xl text-sky-600 max-w-xl dark:text-sky-100">
        Blog ini berisi tulisan yang ditulis berdasarkan pengalaman dan
        pengetahuan pribadi.
      </p>
    </div>
  </section>

  <section id="best-blog" class="container">
    <div class="w-full p-4 py-8 lg:p-12 bg-sky-50 rounded-2xl lg:rounded-3xl dark:bg-sky-800">
      <h1 class="text-3xl font-extrabold text-sky-700 mb-8 lg:mb-12 dark:text-sky-100">
        Blog Terbaik
      </h1>
      <div class="grid grid-cols-1 gap-12 md:grid-cols-2 md:gap-16">
        <a href="#" class="space-y-4 group">
          <div class="w-full aspect-video overflow-hidden rounded-xl">
            <img
              src="/super-mario.jpg"
              alt="Super Mario"
              class="w-full h-full object-cover object-center group-hover:scale-105 transition-all ease-in rounded-xl"
            />
          </div>
          <h2
            class="text-xl md:text-2xl font-bold text-sky-700 group-hover:underline dark:text-sky-100"
          >
            Membuat game super mario dengan bahasa C
          </h2>
        </a>
        <a href="#" class="space-y-4 group">
          <div class="w-full aspect-video overflow-hidden rounded-xl">
            <img
              src="/super-mario.jpg"
              alt="Super Mario"
              class="w-full h-full object-cover object-center group-hover:scale-105 transition-all ease-in rounded-xl"
            />
          </div>
          <h2
            class="text-xl md:text-2xl font-bold text-sky-700 group-hover:underline dark:text-sky-100"
          >
            Membuat game super mario dengan bahasa C
          </h2>
        </a>
        <a href="#" class="space-y-4 group">
          <div class="w-full aspect-video overflow-hidden rounded-xl">
            <img
              src="/super-mario.jpg"
              alt="Super Mario"
              class="w-full h-full object-cover object-center group-hover:scale-105 transition-all ease-in rounded-xl"
            />
          </div>
          <h2
            class="text-xl md:text-2xl font-bold text-sky-700 group-hover:underline dark:text-sky-100"
          >
            Membuat game super mario dengan bahasa C
          </h2>
        </a>
        <a href="#" class="space-y-4 group">
          <div class="w-full aspect-video overflow-hidden rounded-xl">
            <img
              src="/super-mario.jpg"
              alt="Super Mario"
              class="w-full h-full object-cover object-center group-hover:scale-105 transition-all ease-in rounded-xl"
            />
          </div>
          <h2
            class="text-xl md:text-2xl font-bold text-sky-700 group-hover:underline dark:text-sky-100"
          >
            Membuat game super mario dengan bahasa C
          </h2>
        </a>
      </div>
    </div>
  </section>

  <section id="kategori" class="container">
    <div class="py-24">
      <h1 class="text-3xl font-extrabold text-sky-700 mb-8 text-center dark:text-sky-100">
        Category
      </h1>
      <div class="flex mx-auto max-w-lg justify-center gap-2">
        <Tag tag="Series" />
        <Tag tag="Book" />
        <Tag tag="Teknikal" />
      </div>
    </div>
  </section>
